@model ExamSubjectsStudentsViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create new exam</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class-danger></div>
            <div class="form-group">
                <lable asp-for="Exam.PredmetId" class="control-label">Please select Subject</lable>
                <select asp-for="Exam.PredmetId" class="form-control"
                        asp-items="@(new SelectList(Model.Subjects,"PredmetId","Naziv"))">
                    <option>--</option>
                </select>
            </div>
            <div class="form-group">
                <lable asp-for="Exam.BrojIndeksa" class="control-label">Please select Index Number</lable>
                <select asp-for="Exam.BrojIndeksa" class="form-control"
                        asp-items="@(new SelectList(Model.Students,"BrojIndeksa","BrojIndeksa"))">
                    <option>--</option>
                </select>
            </div>
            <div class="form-group">
                <lable asp-for="Exam.Ocena" class="control-label"></lable>
                <input asp-for="Exam.Ocena" placeholder="Grade" value="5"  class="form-control" type="number"  min="5" max="10" />
                <span asp-validation-for="Exam.Ocena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <lable asp-for="Exam.DatumPolaganja" class="control-label"></lable>
                <input asp-for="Exam.DatumPolaganja" class="form-control" type="datetime-local" value="2011-08-19"/>
                <span asp-validation-for="Exam.DatumPolaganja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to exams list</a>
</div>