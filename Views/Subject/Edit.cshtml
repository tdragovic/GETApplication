@model GETApplication.Models.Subject

@{ 
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update subject</h2>

<div class="card my-5">
    <div class="d-flex justify-content-center p-3 text-left">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class-danger></div>
            <input type="hidden" asp-for="PredmetId" />
            <div class="form-group">
                <lable asp-for="Naziv" class="control-label"></lable>
                <input asp-for="Naziv"  class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>    
    </div>
</div>
<div>
    <a asp-action="Index">Back to subjects list</a>
</div>
