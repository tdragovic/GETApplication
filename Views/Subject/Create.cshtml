@model GETApplication.Models.Subject

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create new subject</h2>

<div class="card my-5">
    <div class="d-flex justify-content-center p-3 text-left">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class-danger></div>
            <div class="form-group">
                <lable asp-for="Naziv" class="control-label"></lable>
                <input asp-for="Naziv" placeholder="Subject title" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index"> Back to subjects list</a>
</div>